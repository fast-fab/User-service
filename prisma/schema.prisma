generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

model user{
  id        String  @id @default(uuid()) @unique
  email     String  @unique
  password  String
  name      String?
  Orders    Order[]
  Address   String[] //to add more than one address
  lang      String?
  long      String?
}

model Order {
  orderId  String     @default(uuid()) @id
  userId   String
  user     user       @relation(fields: [userId], references: [id])
  items    OrderItem[]
}

model OrderItem {
  id        String  @default(uuid()) @id
  productId String  @unique @default(uuid())
  qty       Int
  cost      Float
  status    STATUS @default(ORDERED)
  order     Order  @relation(fields: [id], references: [orderId], onDelete: Cascade)
}


model Returns{
  id          String   @default(uuid()) @id
  ProductId   String 
  Status      STATUS   @default(RETURNED)
  cost        Float
  totalCost   Float
}

enum STATUS{
  ORDERED
  DELIVERED
  RETURNED
}